Package: hdrm
Title: High Dimensional Repeated Measures
Version: 1.0
Authors@R: c(
    person("Nils", "Hichert",  email = "nils.hichert@tu-dortmund.de", 
    role = c("aut", "cre")),
    person("Paavo", "Sattler", , "paavo.sattler@tu-dortmund.de", role = "aut",
